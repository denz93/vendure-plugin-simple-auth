{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "target": "ES2020",
    "declaration": true,
    "rootDir": "./src"
  },
  "include": ["src/"],
  "exclude": ["src/test", "**/*.test.ts",  "**/*.spec.ts"],
}